    "version": "0.2.0",
    "configurations": [
        {
            "name": "BMP Debug",
            "cwd": "${workspaceFolder}",
            "executable": "./target/thumbv6m-none-eabi/debug/SFP-AP-rs",
            "request": "attach",
            "type": "cortex-debug",
            "interface": "swd",
            "servertype": "bmp",
            "device": "RP2040",
            "BMPGDBSerialPort": "COM5",
            "runToEntryPoint": "main",
            "preAttachCommands": [
                "set async-remote false",
                "set remote-timeout 20"
            ],
            "preRestartCommands": [
                "enable breakpoint",
                "break main"
            ]

        }
    ]
}